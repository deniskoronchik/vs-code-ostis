{
    "name": "scs",
    "displayName": "scs",
    "description": "Support of SCs-code edit",
    "version": "0.0.1",
    "publisher": "ostis",

    "activationEvents": [
        "onLanguage:scs"
    ],
    "main": "./out/main",

    "engines": {
        "vscode": "^1.10.0"
    },

    "categories": [
        "Languages",
        "Snippets",
		"Themes"
    ],

    "contributes": {
        "languages": [{
            "id": "scs",
            "aliases": ["scs", "scs"],
            "extensions": [".scs",".scsi"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "scs",
            "scopeName": "source.scs",
            "path": "./syntaxes/scs.tmLanguage.json"
        }],
        "snippets": [{
            "language": "scs",
            "path": "./snippets/scs.json"
        }]
    },

    "dependencies": {
        "vscode-languageclient": "^2.6.3",
        "vscode-languageserver": "^2.6.2"
    },

    "devDependencies": {
       "typescript": "^2.0.3",
        "vscode": "^1.1.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
   },

   "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    }
}