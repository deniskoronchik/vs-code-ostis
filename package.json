{
    "name": "ostis",
    
    "description": "Support of knowledge base source edit for OSTIS projects.",
    "version": "0.1.0",
    "publisher": "deniskoronchik",
    "displayName": "OSTIS Knowledge base source support",
    "license": "MIT",
    "icon": "images/ostis-logo.png",

    "repository": {
        "type": "git",
        "url": "https://github.com/ostis-dev/vs-code-ostis.git"
    },

    "engines": {
        "vscode": "^1.10.0"
    },

    "categories": [
        "Languages",
        "Snippets"
    ],

    "keywords": [
        "ostis", "knowledge base"
    ],

    "contributes": {
        "languages": [{
            "id": "scs",
            "aliases": ["scs", "scs"],
            "extensions": [".scs",".scsi"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "scs",
            "scopeName": "source.scs",
            "path": "./syntaxes/scs.tmLanguage.json"
        }],
        "snippets": [{
            "language": "scs",
            "path": "./snippets/scs.json"
        }]
    },

    "dependencies": {
        "vscode-languageclient": "^2.6.3",
        "vscode-languageserver": "^2.6.2"
    },

    "devDependencies": {
       "typescript": "^2.0.3",
        "vscode": "^1.1.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
   },

   "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    }
}